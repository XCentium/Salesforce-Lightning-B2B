<aura:component implements="lightning:availableForFlowScreens,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="taskListString" type="String"/>
    <aura:attribute name="taskListString2" type="String"/>
    <aura:attribute name="taskList" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <div style="margin-top:10px;margin-bottom:10px;">
        <div class="slds-text-heading_medium">Corrective actions summary:</div>
        <ul class="slds-list_dotted">
            <aura:iteration items="{!v.taskList}" var="task">
                <li>{!task}</li>
            </aura:iteration>
        </ul>
    </div>
    
</aura:component>